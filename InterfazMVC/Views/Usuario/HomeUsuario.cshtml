@{
}
@model IEnumerable<InterfazMVC.Models.Contacto>
<!DOCTYPE html>
<html>
<head>
    <title>CHAT METABOOK</title>
</head>
<body bgcolor="#C0C0C0">
    <h1>Bienvenido @ViewBag.Usuario</h1>
    <h2>@ViewBag.Mensaje</h2>
    <nav>
        <ul>
            <li><a href="/Usuario/AgregarContacto"> Agregar Contacto</a></li>
            <li><a href="/Usuario/VerSolicitudes"> Ver Solicitudes</a></li>
        </ul>
    </nav>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <h3>Estos son tus contactos</h3>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="/Chat/Chat?miusuario=@item.miusuario&micontacto=@item.micontacto">
                            <div>
                                @Html.DisplayFor(modelItem => item.micontacto)
                            </div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>